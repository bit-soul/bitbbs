{
  "root": true,
  "plugins": ["node"],
  "extends": ["eslint:recommended", "plugin:node/recommended"],
  "ignorePatterns": ["node_modules", "dist", "static", "gulpfile.js", "jest.config.js", "main.js", "vsdebug.js"],
  "env": {
    "node": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest"
  },
  "rules": {
    "eqeqeq": "error",
    "no-undef": "error",
    "no-unused-vars": "off",
    "no-process-exit": "off",
    "node/no-missing-import": "off",
    "node/no-unsupported-features/es-syntax": "off"
  },
  "overrides": [
    {
      "files": ["test/**/*.js"],
      "plugins": ["jest"],
      "extends": ["plugin:jest/recommended"],
      "env": {
        "jest": true
      },
      "rules": {
        "jest/expect-expect": "off",
        "node/no-unpublished-import": "off"
      }
    }
  ]
}
