<div id='sidebar'>

  <div class='panel'>
    <% if (typeof(user) !== 'undefined' || current_user) { %>
    <div class='header'>
      <span class='col_fade'>Profile</span>
    </div>
    <div class='inner'>
      <%- include('user/card',{ user: typeof(user) === 'undefined' ? current_user : user}) %>
    </div>
    <% } else { %>
    <div class='inner'>
      <p><%= config.description %></p>
    </div>
    <% } %>
  </div>

  <% if (current_user) { %>
  <div class="panel">
    <div class='inner'>
      <a href='/topic/create' id='create_topic_btn'>
        <span class='span-success'>New Topic</span>
      </a>
    </div>
  </div>
  <% } %>

  <% if (typeof(no_reply_topics) !== 'undefined') { %>
  <div class='panel'>
    <div class='header'>
      <span class='col_fade'>No reply topics</span>
    </div>
    <div class='inner'>
      <% if (no_reply_topics.length > 0) { %>
      <ul class="unstyled">
      <% no_reply_topics.forEach(topic => { %>
        <%- include('topic/small', { topic: topic }) %>
      <% }); %>
      </ul>
      <% } else { %>
      <p>None</p>
      <% } %>
    </div>
  </div>
  <% } %>

  <% if (typeof(tops) !== 'undefined') { %>
  <div class='panel'>
    <div class='header'>
      <span class='col_fade'>Score Rankings</span>
      &nbsp;
      <a class='dark' href='/user/top100'>TOP 100 &gt;&gt;</a>
    </div>
    <div class='inner'>
      <% if (tops.length > 0) { %>
      <ol>
      <% tops.forEach(user => { %>
        <%- include('user/top', { user: user }) %>
      <% }); %>
      </ol>
      <% } else { %>
      <p>None</p>
      <% } %>
    </div>
  </div>
  <% } %>
</div>
