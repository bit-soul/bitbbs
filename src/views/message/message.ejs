<% if (message.has_read) { %>
<div class='cell' message_id='<%= message._id %>'>
<% } else { %>
<div class='cell message' message_id='<%= message._id %>'>
<% } %>

  <% if(message.type == 'reply'){ %>
  <span>
    <a href="/user/<%= message.author._id %>" target="_blank"><%= message.author.name %></a>
    replied your topic
    <a href="/topic/<%- message.topic._id + (message.reply ? '#' + message.reply._id : '') %>" target="_blank"><%=
      message.topic.title %></a>
  </span>
  <% } %>
  
  <% if(message.type == 'reply2'){ %>
  <span>
    <a href="/user/<%= message.author._id %>" target="_blank"><%= message.author.name %></a>
    replied you in topic
    <a href="/topic/<%= message.topic._id + (message.reply ? '#' + message.reply._id : '') %>" target="_blank"><%=
      message.topic.title %></a>
  </span>
  <% } %>
  
  <% if(message.type == 'follow'){ %>
  <span>
    <a href="/user/<%= message.author._id %>" target="_blank"><%= message.author.name %></a>
    followed you
  </span>
  <% } %>
  
  <% if (message.type == 'at'){ %>
  <span>
    <a href="/user/<%= message.author._id %>" target="_blank"><%= message.author.name %></a>
    mentioned you in topic
    <a href="/topic/<%= message.topic._id + (message.reply ? '#' + message.reply._id : '') %>" target="_blank"><%=
      message.topic.title %></a>
  </span>
  <% } %>

</div>
