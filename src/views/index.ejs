<%- include('sidebar') %>

<div id="content">
  <div class="panel">
    <div class="header">
      <% [['all', 'All'], ['good', 'Good']].concat(tabs).forEach(pair => {
        const value = pair[0];
        const text = pair[1]; %>
        <a href="<%= value ? '/?tab=' + value : '/' %>"
          class="topic-tab <%= value === tab ? 'current-tab' : '' %>"><%= text %></a>
      <% }) %>
    </div>
    <% if (typeof(topics) !== 'undefined' && topics.length > 0) { %>
    <div class="inner no-padding">
      <%- include('topic/list', {
      topics: topics,
      pages: pages,
      current_page: current_page,
      base: '/'
      }) %>
    </div>
    <% } else { %>
    <div class="inner">
      <p>No Topic</p>
    </div>
    <% } %>
  </div>
</div>
